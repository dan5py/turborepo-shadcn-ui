{
  "name": "turborepo-shadcn-ui",
  "version": "1.6.0",
  "private": true,
  "license": "MIT",
  "scripts": {
    "build": "turbo build",
    "dev": "turbo dev",
    "lint": "turbo lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "ui": "bun --filter @repo/ui ui",
    "check-types": "turbo run check-types"
  },
  "devDependencies": {
    "@repo/eslint-config": "workspace:*",
    "@repo/typescript-config": "workspace:*",
    "prettier": "catalog:",
    "turbo": "2.6.0"
  },
  "packageManager": "bun@1.3.1",
  "workspaces": {
    "packages": [
      "./apps/*",
      "./packages/*"
    ],
    "catalog": {
      "lucide-react": "^0.552.0",
      "tailwindcss": "^4.1.17",
      "@tailwindcss/postcss": "^4.1.17",
      "eslint": "^9.39.1",
      "@eslint/js": "^9.39.1",
      "prettier": "^3.6.2",
      "typescript": "^5.9.3",
      "@types/eslint": "^9",
      "next": "16.0.1",
      "@next/eslint-plugin-next": "16.0.1",
      "@types/node": "^24"
    },
    "catalogs": {
      "react19": {
        "react": "^19.2.0",
        "react-dom": "^19.2.0",
        "@types/react": "^19.2.2",
        "@types/react-dom": "^19.2.2"
      }
    }
  }
}
